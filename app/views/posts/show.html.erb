<div class="center jumbotron">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author's comment</strong>
  <%= @post.message %>
</p>

<p>
  <strong>Picture:</strong><br>
  <%= image_tag @post.image_url %>
</p>
<% if current_account == @acc %>
  <%= link_to 'Edit', edit_account_post_path(@acc, @post) %>
<% end %>
<%= link_to 'Back', account_posts_path(@acc) %>
