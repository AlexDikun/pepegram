<p id="notice"><%=notice%></p>
<h1>Post</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
    </tr>
  </thead>

  <tbody>
    <%@posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= image_tag post.image_url %></td>
        <td><%= link_to 'Show', account_post %></td>
        <td><%= link_to 'Edit', edit_account_post_path(@acc, @post) %></td>
        <td><%= link_to 'Destroy', account_post, method: :delete, data: { confirm: "You are sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Post", new_account_post_path%>
